{
  "compilerOptions": {
    
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "strict": false,

    "lib": ["es2021", "dom"],    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
